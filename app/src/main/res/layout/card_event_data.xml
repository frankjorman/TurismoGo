<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        style="@style/Card.Main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="8"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivEventCardData1"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="3"
                android:src="@drawable/travel_3"
                android:scaleType="centerCrop"
                android:importantForAccessibility="no" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/Text.Title.Bold"
                    android:id="@+id/tvEventNameCardData1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="5dp"
                    tools:text="@string/placeholder_title"/>

                <TextView
                    style="@style/Text.Content.Small"
                    android:id="@+id/tvEventDescriptionCardData1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_below="@id/tvEventNameCardData1"
                    android:lines="4"
                    android:maxLines="4"
                    tools:text="@string/placeholder_subtitle"/>

                <com.google.android.material.textview.MaterialTextView
                    style="@style/Text.Content.Small"
                    android:id="@+id/tvEventCostCardData1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/tvEventDatesCardData1"
                    android:layout_toStartOf="@id/btnEventJoinCardData1"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    tools:text="@string/placeholder_title"/>

                <com.google.android.material.textview.MaterialTextView
                    style="@style/Text.Content.Small"
                    android:id="@+id/tvEventDatesCardData1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/tvEventRoomAvailableCardData1"
                    android:layout_toStartOf="@id/btnEventJoinCardData1"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="2dp"
                    tools:text="@string/placeholder_title"/>

                <com.google.android.material.textview.MaterialTextView
                    style="@style/Text.Content.Small"
                    android:id="@+id/tvEventRoomAvailableCardData1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/btnEventJoinCardData1"
                    android:layout_alignBottom="@id/btnEventJoinCardData1"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="5dp"
                    tools:text="@string/placeholder_title"/>


                <com.google.android.material.button.MaterialButton
                    style="@style/Button.IconNatural"
                    android:id="@+id/btnEventJoinCardData1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    app:icon="@drawable/icon_add_circle"
                    />


            </RelativeLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>